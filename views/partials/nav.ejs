<style>
    .glass-navbar {
        background-color: rgba(33, 37, 41, 0.7);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
        transition: all 0.3s ease-in-out;
    }

    .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        letter-spacing: 1px;
        color: #00bcd4 !important;
        text-shadow: 0 0 6px rgba(0, 188, 212, 0.5);
    }

    .nav-link {
        font-weight: 500;
        font-size: 1.05rem;
        color: #f1f1f1 !important;
        transition: color 0.2s, transform 0.2s;
    }

    .nav-link:hover {
        color: #00bcd4 !important;
        transform: scale(1.05);
    }

    .dropdown-menu {
        background-color: #1f1f1f;
        border: none;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    }

    .dropdown-item {
        color: #f0f0f0;
    }

    .dropdown-item:hover {
        background-color: #333;
        color: #00bcd4;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-dark sticky-top glass-navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">TechTalks</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ms-auto">

                <% if (locals.user) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog/add-new">Create Blog</a>
                    </li>
                    <% } %>

                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>

                        <% if (locals.user) { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <%= user.fullName %>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="/user/profile">My Profile</a></li>
                                    <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
                                </ul>

                            </li>
                            <% } else { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/user/signup">Create Account</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/user/signin">Signin</a>
                                </li>
                                <% } %>
            </ul>
        </div>
    </div>
</nav>

<% if (locals.error) { %>
    <div class="container mt-4">
        <div class="alert alert-danger" role="alert">
            <%= locals.error %>
        </div>
    </div>
    <% } %>