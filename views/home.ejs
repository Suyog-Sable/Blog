<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Home Page</title>

        <style>
            .blog-card {
                border-bottom: 1px solid #eee;
                padding: 24px 0;
            }

            .blog-image {
                width: 280px;
                height: 180px;
                object-fit: cover;
                border-radius: 6px;
            }

            .blog-title {
                font-size: 1.4rem;
                font-weight: bold;
                margin-bottom: 8px;
            }

            .blog-snippet {
                font-size: 0.95rem;
                color: #444;
                max-height: 60px;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .author-info {
                font-size: 0.85rem;
                color: #777;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .author-info img {
                width: 28px;
                height: 28px;
                border-radius: 50%;
                object-fit: cover;
            }

            .read-btn {
                font-size: 0.9rem;
            }

            .meta-info {
                font-size: 0.85rem;
                color: #888;
            }

            @media (max-width: 768px) {
                .blog-flex {
                    flex-direction: column;
                    gap: 16px;
                }

                .blog-image {
                    width: 100%;
                    height: 200px;
                }
            }
        </style>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-5">
            <!-- üîç Search -->
            <form action="/search" method="GET" class="mb-4">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search blogs..." />
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>

            <h2 class="fw-bold mb-4">Explore Latest Blogs</h2>

            <% blogs.forEach(blog=> { %>
                <div class="blog-card d-flex gap-4 blog-flex">
                    <!-- Cover Image -->
                    <a href="/blog/<%= blog._id %>">
                        <img src="<%= blog.coverImageURL %>" alt="Cover" class="blog-image">
                    </a>

                    <!-- Blog Content -->
                    <div class="flex-grow-1 d-flex flex-column justify-content-between">
                        <div>
                            <a href="/blog/<%= blog._id %>" class="text-dark text-decoration-none">
                                <div class="blog-title">
                                    <%= blog.title %>
                                </div>
                            </a>

                            <!-- üìÖ Date + ‚ù§Ô∏è Likes -->
                            <div class="meta-info mb-2">
                                Posted on
                                <%= new Date(blog.createdAt).toLocaleDateString('en-IN', { day: 'numeric' ,
                                    month: 'long' , year: 'numeric' }) %>
                                    |
                                    ‚ù§Ô∏è <%= blog.likeCount || 0 %> Likes
                            </div>

                            <!-- üìù Snippet -->
                            <div class="blog-snippet">
                                <%= blog.body.length> 200 ? blog.body.substring(0, 200) + "..." : blog.body %>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <!-- Author -->
                            <% if (blog.createdBy) { %>
                                <div class="author-info">
                                    <img src="<%= blog.createdBy.profileImageURL %>" alt="Author">
                                    <span>
                                        <%= blog.createdBy.fullName %>
                                    </span>
                                </div>
                                <% } %>

                                    <!-- Read More -->
                                    <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm read-btn">
                                        Read More
                                    </a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <%- include('./partials/script') %>
</body>

</html>